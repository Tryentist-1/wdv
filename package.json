{
  "name": "wdv-tests",
  "version": "1.0.0",
  "scripts": {
    "build:css": "./node_modules/.bin/postcss ./css/tailwind.css -o ./css/tailwind-compiled.css",
    "watch:css": "./node_modules/.bin/postcss ./css/tailwind.css -o ./css/tailwind-compiled.css --watch",
    "build:css:prod": "./node_modules/.bin/postcss ./css/tailwind.css -o ./css/tailwind-compiled.css --minify",
    "test": "playwright test --grep-invert 'LOCAL'",
    "test:all": "playwright test",
    "test:ui": "playwright test --ui --grep-invert 'LOCAL'",
    "test:headed": "playwright test --headed --grep-invert 'LOCAL'",
    "test:local": "playwright test --config=playwright.config.local.js",
    "test:local:ui": "playwright test --config=playwright.config.local.js --ui",
    "test:remote": "playwright test --grep-invert 'LOCAL'",
    "test:setup-sections": "playwright test tests/ranking_round_setup_sections.spec.js",
    "test:ranking-round": "playwright test tests/ranking_round.spec.js",
    "test:workflow:dev": "./tests/scripts/test-workflow.sh development",
    "test:workflow:pre": "./tests/scripts/test-workflow.sh pre-deployment",
    "test:workflow:post": "./tests/scripts/test-workflow.sh post-deployment",
    "test:api:core": "jest tests/api/core --verbose",
    "test:api:archers": "jest tests/api/archers --verbose",
    "test:api:rounds": "jest tests/api/rounds --verbose",
    "test:api:events": "jest tests/api/events --verbose",
    "test:api:matches": "jest tests/api/matches --verbose",
    "test:api:scoring": "jest tests/api/scoring --verbose",
    "test:api:integration": "jest tests/api/integration --verbose",
    "test:api:verification": "jest tests/api/verification --verbose",
    "test:api:brackets": "jest tests/api/brackets --verbose",
    "test:api:integration": "jest tests/api/integration --verbose",
    "test:api:all": "jest tests/api --verbose",
    "test:api:coverage": "jest tests/api --coverage --verbose",
    "serve": "php -S localhost:8001",
    "deploy": "bash ./DeployFTP.sh",
    "deploy:dry": "bash ./DeployFTP.sh --dry-run",
    "deploy:reset": "bash ./DeployFTP.sh --reset",
    "deploy:fast": "bash ./DeployFTP.sh --no-local-backup"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "jest": "^30.2.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.17"
  },
  "main": "playwright.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "dependencies": {
    "fsevents": "^2.3.2",
    "playwright": "^1.56.1",
    "playwright-core": "^1.56.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}
